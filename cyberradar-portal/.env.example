# ============================================
# CyberLage Portal - Environment Variables
# ============================================

# --- Base ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=<YOUR_NEXTAUTH_SECRET>
ENCRYPTION_KEY=<64_HEX_CHARS>

# --- Cosmos DB ---
COSMOS_ENDPOINT=<YOUR_COSMOS_DB_ENDPOINT>
COSMOS_KEY=<YOUR_COSMOS_DB_KEY>
COSMOS_DATABASE=cyberradar
COSMOS_DATABASE_DEV=cyberradar-dev

# --- Azure OpenAI ---
AZURE_OPENAI_ENDPOINT=<YOUR_AZURE_OPENAI_ENDPOINT>
AZURE_OPENAI_KEY=<YOUR_AZURE_OPENAI_KEY>
AZURE_OPENAI_API_KEY=<YOUR_AZURE_OPENAI_KEY>
AZURE_OPENAI_DEPLOYMENT=<YOUR_DEPLOYMENT_NAME>
AZURE_OPENAI_MODEL=gpt-4o
AZURE_OPENAI_API_VERSION=2024-10-21

# --- Search (optional) ---
SEARCH_ENDPOINT=<YOUR_AZURE_SEARCH_ENDPOINT>
SEARCH_API_KEY=<YOUR_AZURE_SEARCH_KEY>
SEARCH_INDEX=cyberradar-alerts-index

# --- Microsoft Entra (optional) ---
AUTH_ENTRA_CLIENT_ID=<OPTIONAL>
AUTH_ENTRA_CLIENT_SECRET=<OPTIONAL>
AUTH_ENTRA_ISSUER=https://login.microsoftonline.com/common/v2.0
CYBERLAGE_APP_REDIRECT_URI=http://localhost:3000/api/auth/consent

# --- Setup / MCP (optional) ---
SETUP_TOKEN=<OPTIONAL>
MCP_API_KEY=<OPTIONAL>

# --- App ---
NODE_ENV=development
