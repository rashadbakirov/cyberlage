# ============================================
# CyberLage Environment Variables
# ============================================

# --- Azure configuration ---
AZURE_SUBSCRIPTION_ID=<YOUR_AZURE_SUBSCRIPTION_ID>
AZURE_RESOURCE_GROUP=<YOUR_RESOURCE_GROUP_NAME>
AZURE_REGION=westeurope

# --- Cosmos DB ---
COSMOS_DB_ENDPOINT=<YOUR_COSMOS_DB_ENDPOINT>
COSMOS_DB_KEY=<YOUR_COSMOS_DB_KEY>
COSMOS_DB_DATABASE=cyberlage
COSMOS_DB_CONTAINER_THREATS=raw_alerts
COSMOS_DB_CONTAINER_COMPLIANCE=compliance

# Compatibility (Portal/Fetcher expect these variable names)
COSMOS_ENDPOINT=<YOUR_COSMOS_DB_ENDPOINT>
COSMOS_KEY=<YOUR_COSMOS_DB_KEY>
COSMOS_DATABASE=cyberradar
COSMOS_CONNECTION_STRING=<YOUR_COSMOS_CONNECTION_STRING>

# --- AI / LLM configuration ---
# Option A: Azure OpenAI
AZURE_OPENAI_ENDPOINT=<YOUR_AZURE_OPENAI_ENDPOINT>
AZURE_OPENAI_KEY=<YOUR_AZURE_OPENAI_KEY>
AZURE_OPENAI_API_KEY=<YOUR_AZURE_OPENAI_KEY>
AZURE_OPENAI_DEPLOYMENT=<YOUR_DEPLOYMENT_NAME>
AZURE_OPENAI_MODEL=gpt-4o
AZURE_OPENAI_API_VERSION=2024-10-21

# Option B: OpenAI direct
# OPENAI_API_KEY=<YOUR_OPENAI_KEY>

# Option C: Anthropic Claude
# ANTHROPIC_API_KEY=<YOUR_CLAUDE_KEY>

# --- Data sources ---
NVD_API_KEY=<YOUR_NVD_API_KEY>          # Optional, increases rate limit

# Microsoft M365 feeds (optional)
M365_TENANT_ID=<YOUR_M365_TENANT_ID>
M365_CLIENT_ID=<YOUR_M365_CLIENT_ID>
M365_CLIENT_SECRET=<YOUR_M365_CLIENT_SECRET>
# Optional override: true/false
ENABLE_TENANT_SOURCES=

# --- Portal / Auth ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=<YOUR_NEXTAUTH_SECRET>
ENCRYPTION_KEY=<64_HEX_CHARS>
AUTH_ENTRA_CLIENT_ID=<OPTIONAL>
AUTH_ENTRA_CLIENT_SECRET=<OPTIONAL>
AUTH_ENTRA_ISSUER=https://login.microsoftonline.com/common/v2.0

# --- Search (optional) ---
SEARCH_ENDPOINT=<YOUR_AZURE_SEARCH_ENDPOINT>
SEARCH_API_KEY=<YOUR_AZURE_SEARCH_KEY>
SEARCH_INDEX=cyberradar-alerts-index

# --- Storage (optional) ---
BLOB_CONNECTION_STRING=<YOUR_BLOB_CONNECTION_STRING>

# --- App configuration ---
PORT=3000
NODE_ENV=production
