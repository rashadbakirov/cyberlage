# ============================================
# CyberLage Umgebungsvariablen
# ============================================

# --- Azure Konfiguration ---
AZURE_SUBSCRIPTION_ID=<DEINE_AZURE_SUBSCRIPTION_ID>
AZURE_RESOURCE_GROUP=<DEIN_RESOURCE_GROUP_NAME>
AZURE_REGION=westeurope

# --- Cosmos DB ---
COSMOS_DB_ENDPOINT=<DEIN_COSMOS_DB_ENDPOINT>
COSMOS_DB_KEY=<DEIN_COSMOS_DB_KEY>
COSMOS_DB_DATABASE=cyberlage
COSMOS_DB_CONTAINER_THREATS=raw_alerts
COSMOS_DB_CONTAINER_COMPLIANCE=compliance

# Kompatibilität (Portal/Fetcher erwartet diese Variablen)
COSMOS_ENDPOINT=<DEIN_COSMOS_DB_ENDPOINT>
COSMOS_KEY=<DEIN_COSMOS_DB_KEY>
COSMOS_DATABASE=cyberradar
COSMOS_CONNECTION_STRING=<DEINE_COSMOS_CONNECTION_STRING>

# --- KI / LLM Konfiguration ---
# Option A: Azure OpenAI
AZURE_OPENAI_ENDPOINT=<DEIN_AZURE_OPENAI_ENDPOINT>
AZURE_OPENAI_KEY=<DEIN_AZURE_OPENAI_KEY>
AZURE_OPENAI_API_KEY=<DEIN_AZURE_OPENAI_KEY>
AZURE_OPENAI_DEPLOYMENT=<DEIN_DEPLOYMENT_NAME>
AZURE_OPENAI_MODEL=gpt-4o
AZURE_OPENAI_API_VERSION=2024-10-21

# Option B: OpenAI direkt
# OPENAI_API_KEY=<DEIN_OPENAI_KEY>

# Option C: Anthropic Claude
# ANTHROPIC_API_KEY=<DEIN_CLAUDE_KEY>

# --- Datenquellen ---
NVD_API_KEY=<DEIN_NVD_API_KEY>          # Optional, erhöht Rate-Limit

# Microsoft M365 Feeds (optional)
M365_TENANT_ID=<DEIN_M365_TENANT_ID>
M365_CLIENT_ID=<DEIN_M365_CLIENT_ID>
M365_CLIENT_SECRET=<DEIN_M365_CLIENT_SECRET>
# Optionaler Override: true/false
ENABLE_TENANT_SOURCES=

# --- Portal / Auth ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=<DEIN_NEXTAUTH_SECRET>
ENCRYPTION_KEY=<64_HEX_ZEICHEN>
AUTH_ENTRA_CLIENT_ID=<OPTIONAL>
AUTH_ENTRA_CLIENT_SECRET=<OPTIONAL>
AUTH_ENTRA_ISSUER=https://login.microsoftonline.com/common/v2.0

# --- Suche (optional) ---
SEARCH_ENDPOINT=<DEIN_AZURE_SEARCH_ENDPOINT>
SEARCH_API_KEY=<DEIN_AZURE_SEARCH_KEY>
SEARCH_INDEX=cyberradar-alerts-index

# --- Storage (optional) ---
BLOB_CONNECTION_STRING=<DEIN_BLOB_CONNECTION_STRING>

# --- App-Konfiguration ---
PORT=3000
NODE_ENV=production

